<VirtualHost *:<%= options.port %>>
  ServerName <%= options.server_name %>
  RailsEnv <%= environment %>  

  Include "/etc/apache2/sites-available/<%= application_name %>-common"
  Include "/etc/apache2/sites-available/<%= application_name %>-headers"
  Include "/etc/apache2/sites-available/<%= application_name %>-redirects"
  Include "/etc/apache2/sites-available/<%= application_name %>-auth"
  Include "/etc/apache2/sites-available/<%= application_name %>-ip-restriction"
</VirtualHost>
